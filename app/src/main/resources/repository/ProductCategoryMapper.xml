<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sotugyouseisaku.app.repository.view.ProductCategoryMapper">

    <!-- product_view からカテゴリを重複除去して取得 -->
    <select id="selectDistinctCategories" resultType="com.sotugyouseisaku.app.Record.ProductCategoryRecord">
        SELECT DISTINCT category
        FROM online_shop.product_view
        ORDER BY category
    </select>

</mapper>
