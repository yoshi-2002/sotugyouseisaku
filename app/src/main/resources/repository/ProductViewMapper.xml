<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sotugyouseisaku.app.repository.view.ProductViewMapper">

    <!-- product_view から全件取得／カテゴリ絞り込みも対応 -->
    <select id="selectAllProductView"
            parameterType="com.sotugyouseisaku.app.form.ProductSearchForm"
            resultType="com.sotugyouseisaku.app.Record.ProductViewRecord">
        SELECT
            id,
            name,
            <!-- alias, -->
            jyoutai,
            description,
            price,
            stock,
            created_at,
            category,
            maker,
            image_url
        FROM
            online_shop.product_view
        <where>
            <!-- カテゴリが選択されていれば絞り込み -->
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>

            <!-- メーカーが選択されていれば絞り込み -->
            <if test="maker != null and maker != ''">
                AND maker = #{maker}
            </if>

             <!-- 状態（新品・中古）が選択されていれば絞り込み -->
            <if test="jyoutai != null and jyoutai != ''">
                AND jyoutai = #{jyoutai}
            </if>

            <!-- 価格帯で絞り込み -->
            <if test="priceMin != null">
                AND price &gt;= #{priceMin}
            </if>
            <if test="priceMax != null">
                AND price &lt;= #{priceMax}
            </if>

            <!-- フリーワードが入力されていれば絞り込み -->
            <if test="keyword != null and keyword != ''">
                AND (
                    name LIKE CONCAT('%', #{keyword}, '%')
                    OR description LIKE CONCAT('%', #{keyword}, '%')
                    <!-- OR alias LIKE CONCAT('%', #{keyword}, '%') -->
                )
            </if>
        </where>

        <!-- ここで表示順を切り替え -->
        <choose>
            <when test="sortOrder == 'priceAsc'">
                ORDER BY price ASC
            </when>
            <when test="sortOrder == 'priceDesc'">
                ORDER BY price DESC
            </when>
            <otherwise>
                ORDER BY id DESC <!-- おすすめ順の例 -->
            </otherwise>
        </choose>

    </select>

</mapper>
