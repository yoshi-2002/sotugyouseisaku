<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sotugyouseisaku.app.repository.view.ProductViewMapper">

    <!-- product_view から全件取得 -->
    <select id="selectAllProductView" resultType="com.sotugyouseisaku.app.Record.ProductViewRecord">
        SELECT
            id,
            name,
            description,
            price,
            stock,
            created_at,
            category
        FROM
            online_shop.product_view;
    </select>

</mapper>
