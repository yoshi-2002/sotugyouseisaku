<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sotugyouseisaku.app.repository.view.ProductViewMapper">

    <!-- product_view から全件取得／カテゴリ絞り込みも対応 -->
    <select id="selectAllProductView"
            parameterType="com.sotugyouseisaku.app.form.ProductSearchForm"
            resultType="com.sotugyouseisaku.app.Record.ProductViewRecord">
        SELECT
            id,
            name,
            description,
            price,
            stock,
            created_at,
            category,
            image_url
        FROM
            online_shop.product_view
        <where>
            <!-- カテゴリが選択されていれば絞り込み -->
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (name LIKE CONCAT('%', #{keyword}, '%')
                    OR description LIKE CONCAT('%', #{keyword}, '%'))
            </if>
        </where>
    </select>

</mapper>
